@model IEnumerable<Libreria.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <table class="table table-striped">
   
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Genero)</th>
                <th>@Html.DisplayNameFor(model => model.CantPaginas)</th>
                <th>@Html.DisplayNameFor(model => model.Autor.Nombre)</th>
                <th>Acciones</th>
            </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
        
        
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                <td>@Html.DisplayFor(modelItem => item.CantPaginas)</td>
                <td>@Html.DisplayFor(modelItem => item.Autor.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Eliminar</a> 
                </td>
            </tr>
        
   
}
    </tbody>
</table>


