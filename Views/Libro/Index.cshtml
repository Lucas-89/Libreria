@using Libreria.ViewModels;
@model LibroViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo Libro</a>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Libro">
        <div class="col-6 form-group">
            <input  class="form-control" asp-for="NombreBuscado"/>
        </div>
        <button class="btn btn-primary" type="submit">Buscador</button>
    </form>
</div>
    <table class="table table-striped">
   
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Libros[0].Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Libros[0].Genero)</th>
                <th>@Html.DisplayNameFor(model => model.Libros[0].Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Libros[0].Autor.Nombre)</th>
                <th>Acciones</th>
            </tr>
        </thead>
    <tbody>
@foreach (var item in Model.Libros) {
        
        
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.Autor.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Eliminar</a> 
                </td>
            </tr>
        
   
}
    </tbody>
</table>


